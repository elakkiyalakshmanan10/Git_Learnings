	public static void main(String[] args) {
		String str = "Code to reverse a sentence";
		String revS = "";
		String[] stsplit = str.split(" ");
		for (String word : stsplit) {
			revS = revS +" "+ word;
		}
		System.out.print(revS);
	}

}

